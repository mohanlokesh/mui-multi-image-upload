{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "declaration": true,
        "outDir": "dist",
        "lib": [
            "DOM",
            "ESNext"
        ]
    },
    "include": [
        "src/**/*"
    ]
}